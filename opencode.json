{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-opus-4-6",
  "mcp": {
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ]
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "sgai": {
      "type": "remote",
      "url": "http://127.0.0.1:8080/mcp/external",
      "enabled": true
    }
  }
}

{
        "$schema": "https://opencode.ai/config.json",
        "model": "anthropic/claude-opus-4-6",
        "mcp": {
                "playwright": {
                        "type": "local",
                        "command": [
                                "npx",
                                "@playwright/mcp@latest",
                                "--ignore-https-errors",
                                "--isolated",
                                "--caps=vision"
                        ]
                },
                "context7": {
                        "type": "local",
                        "command": [
                                "npx",
                                "-y",
                                "@upstash/context7-mcp"
                        ],
                        "enabled": true
                }
        },
        "permission": {
                "doom_loop": "deny",
                "external_directory": "deny",
                "question": "deny",
                "plan_enter": "deny",
                "plan_exit": "deny"
        },
        "experimental": {
                "mcp_timeout": 43200000
        }
}
